{% extends "base.html.twig" %}

{% block content %}
<div class="headerList well">
    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center">La liste des produits</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <hr>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-5">
        <a href="{{ path('Product', 'new') }}" class="btn btn-success">Ajouter un produit</a>
    </div>
    <div class="row">
        <div class="col-md-12">
            <hr>
        </div>
    </div>
</div>
{% for product in products %}
{% if loop.index % 3 == 0 %}
<div class="row">
{% endif %}

    <div class="col-md-4">
        <div class="thumbnail well">
            <div class="caption">
                <h3 class="text-center"><a href="{{ path('Product', 'product', {id: product.id}) }}">{{ product.name }}</a></h3>
                <h4 class="text-center">{{ product.price }}<span class="glyphicon glyphicon-euro" aria-hidden="true"></span></h4>
                <div class="progress">
                    <div class="progress-bar progress-bar-success progress-bar-striped" style="width: {{ product.percentup }}%">
                        {{ product.thumbsUp }}
                    </div>
                    <div class="progress-bar progress-bar-danger progress-bar-striped" style="width: {{ product.percentdown }}%">
                        {{ product.thumbsDown }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% if loop.index % 3 == 0 %}
</div>
{% endif %}
{% endfor %}


</div>
{% endblock %}

